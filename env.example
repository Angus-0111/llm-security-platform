# LLM Security Platform - Environment Variables

# MongoDB Config
MONGO_ROOT_PASSWORD=securepassword123

# OpenAI API Config
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Application Config
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# AWS Config (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Database Config (for AWS deployment)
AWS_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/llm-security-platform

# Domain Config (production)
DOMAIN_NAME=your-domain.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key
